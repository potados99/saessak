{
  "name": "@saessak-kit/hot-runner",
  "type": "module",
  "version": "0.1.0",
  "description": "Runner for applications that use hot-hook",
  "author": "Julien Ripouteau <julien@ripouteau.com>",
  "license": "MIT",
  "keywords": [
    "hot-hook",
    "runner",
    "hot-reload"
  ],
  "main": "build/bin/run.js",
  "bin": "build/bin/run.js",
  "files": [
    "build"
  ],
  "scripts": {
    "clean": "del-cli build",
    "build": "tsc",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext=.ts",
    "quick:test": "node --import=./tsnode.esm.js --enable-source-maps bin/test.ts",
    "test": "c8 yarn quick:test",
    "prepublishOnly": "yarn build"
  },
  "dependencies": {
    "@adonisjs/ace": "^13.3.0",
    "execa": "^8.0.1"
  },
  "devDependencies": {
    "@adonisjs/tsconfig": "^1.4.1",
    "@changesets/cli": "^2.29.4",
    "@japa/assert": "3.0.0",
    "@japa/file-system": "2.3.0",
    "@japa/runner": "3.1.4",
    "@japa/snapshot": "2.0.6",
    "@julr/tooling-configs": "^4.0.0",
    "@swc/core": "^1.11.29",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^22.15.29",
    "@types/supertest": "^6.0.3",
    "c8": "^10.1.3",
    "del-cli": "^6.0.0",
    "desm": "^1.3.1",
    "eslint": "^9.28.0",
    "execa": "^8.0.1",
    "fs-extra": "^11.3.0",
    "p-event": "^6.0.1",
    "p-timeout": "^6.1.4",
    "prettier": "^3.5.3",
    "supertest": "^7.1.1",
    "ts-node": "^10.9.2",
    "tsdown": "^0.12.5",
    "tsx": "^4.19.4",
    "typescript": "^5.9.3"
  },
  "publishConfig": {
    "access": "public",
    "tag": "latest"
  }
}
