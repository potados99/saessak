{
  "name": "hot-hook",
  "type": "module",
  "version": "0.4.1-next.1",
  "description": "Easy hot module reloading (HMR) for Node.js and ESM",
  "author": "Julien Ripouteau <julien@ripouteau.com>",
  "license": "MIT",
  "keywords": [
    "hmr",
    "hot",
    "reload",
    "esm",
    "node"
  ],
  "exports": {
    ".": "./build/src/hot.js",
    "./loader": "./build/src/loader.js",
    "./register": "./build/src/register.js",
    "./import-meta": {
      "types": "./import-meta.d.ts"
    }
  },
  "main": "index.js",
  "files": [
    "!build/bin",
    "!build/tests",
    "build",
    "import-meta.d.ts"
  ],
  "scripts": {
    "clean": "rm -rf build",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext=.ts",
    "format": "prettier --write .",
    "quick:test": "node --import=./tsnode.esm.js --enable-source-maps bin/test.ts",
    "pretest": "yarn lint",
    "test": "c8 yarn quick:test",
    "build": "yarn clean && tsc",
    "prepublishOnly": "yarn lint && yarn build"
  },
  "dependencies": {
    "chokidar": "^4.0.3",
    "fast-glob": "^3.3.3",
    "parse-imports": "^2.2.1",
    "picomatch": "^4.0.2",
    "read-package-up": "^11.0.0"
  },
  "devDependencies": {
    "@adonisjs/tsconfig": "^1.4.1",
    "@changesets/cli": "^2.29.4",
    "@japa/assert": "3.0.0",
    "@japa/file-system": "2.3.0",
    "@japa/runner": "3.1.4",
    "@japa/snapshot": "2.0.6",
    "@julr/tooling-configs": "^4.0.0",
    "@swc/core": "^1.11.29",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^22.15.29",
    "@types/picomatch": "^4.0.0",
    "@types/supertest": "^6.0.3",
    "c8": "^10.1.3",
    "del-cli": "^6.0.0",
    "desm": "^1.3.1",
    "eslint": "^9.28.0",
    "execa": "^8.0.1",
    "fs-extra": "^11.3.0",
    "p-event": "^6.0.1",
    "p-timeout": "^6.1.4",
    "prettier": "^3.5.3",
    "supertest": "^7.1.1",
    "ts-node": "^10.9.2",
    "tsdown": "^0.12.5",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3"
  },
  "publishConfig": {
    "access": "public",
    "tag": "latest"
  }
}
